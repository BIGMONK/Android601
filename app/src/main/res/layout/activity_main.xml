<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="youtu.android601.MainActivity">

    <youtu.android601.view.RoundBorImageView
        android:id="@+id/iv1"
        android:layout_width="100px"
        android:layout_height="100px"
        android:scaleType="centerCrop"
        custom_view:border_outside_color="@color/colorAccent"
        custom_view:border_thickness="5px"
    />
    <youtu.android601.view.RoundBorImageView
        android:id="@+id/iv2"
        android:layout_width="100px"
        android:layout_height="100px"
        android:scaleType="centerCrop"
        custom_view:border_outside_color="@color/colorAccent"
        custom_view:border_thickness="10px"
    />
    <youtu.android601.view.RoundBorImageView
        android:id="@+id/iv3"
        android:layout_width="100px"
        android:layout_height="100px"
        android:scaleType="centerCrop"
        custom_view:border_outside_color="@color/colorAccent"
        custom_view:border_thickness="20px"
    />

    <TextView
        android:id="@+id/tv0"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:focusable="true"
        android:text="300px"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv0"
        android:background="@color/colorAccent"
        android:focusable="true"
        android:text="200dp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:background="@color/colorPrimaryDark"
        android:focusable="true"
        android:text="200px"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"/>

    <youtu.android601.view.CheckView
        android:id="@+id/checkview"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"/>

        <TextView
            android:id="@+id/move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="move"/>

    </RelativeLayout>


</LinearLayout>
